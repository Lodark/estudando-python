from random import randint

n=[randint(1,20)for c in range(5)]
print(n)
print(list(map(lambda x:x*2,n)))

cadastro=[]
while True:
  pessoa={'nome':str(input('nome')),'idade':int(input('idade:'))}
  if pessoa['idade']==0:
    break
  cadastro.append(pessoa.copy())
  pessoa.clear

print(cadastro)
x=list(map(lambda x:{x['nome'],x['idade']*2},cadastro))
print(x)

