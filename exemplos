cadastro=[]
while True:
  pessoa={'nome':str(input('nome:')),'idade':int(input('idade:'))}
  if pessoa['idade']==0:
    break
  cadastro.append(pessoa.copy())
  pessoa.clear

print(cadastro)
print(list(filter(lambda x:x['idade']%2==0,cadastro)))



from random import randint

n=[randint(1,20)for c in range(5)]
print(n)
print([t for t in n if t%2==0])
par=all([num for num in n if num%2==0])
print(par)
if par==True:
  print('todos sao pares')

