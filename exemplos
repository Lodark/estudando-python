cadastro=[]
while True:
  pessoa={'nome:':str(input('nome')),'idade':int(input('idade:'))}
  if pessoa['idade']==0:
    break
  cadastro.append(pessoa.copy())
  

print(cadastro)
print(sorted(cadastro,key=lambda x:x['idade']))
