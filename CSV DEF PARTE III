

def criando_um_arq():
    from csv import reader,writer
    cabecalho=[]
    dados=[]
    try:
        nome_arq=input('arquivo')+'.csv'
        with open(nome_arq,'r',encoding='utf-8') as arq:
            a=reader(arq)
            for c in a:
                print(c)
                cabecalho.append(c)
                break
        with open(nome_arq, 'a', newline="") as arq:
            x=writer(arq)
            while True:
                for c in range(len(cabecalho[0])):
                    d=input('dados:')
                    dados.append(d)
                x.writerow(dados)
                dados.clear()
                continuar=input('continuar?:')
                if 'n' in continuar:
                    break
    except FileNotFoundError:
        with open(nome_arq,'w',newline="") as arq:
            cc=writer(arq)
            while True:
                c=input('titulo no cabe√ßalho:')
                cabecalho.append(c)
                cont=input('continuar?')
                if 'n' in cont:
                    print('arquivo criado')
                    print(f'cabecalho do arquivo:{cabecalho}')
                    break
            cc.writerow(cabecalho)



def ler_dados_arq():
    from csv import reader, writer
    try:
        nome_arq = input('arquivo') + '.csv'
        with open(nome_arq,'r',encoding='utf-8') as arq:
            x=reader(arq)
            for c in x:
                print(c)
    except FileNotFoundError:
        print('este arquivo nao existe,quer criar um?')
        opc=input('sim ou nao?')
        if 's' in opc:
            criando_um_arq()



ler_dados_arq()
